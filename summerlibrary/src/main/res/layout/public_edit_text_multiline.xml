<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/editTextUtilsDistanceDefault_12"
    android:orientation="vertical">

    <EditText
        android:id="@+id/public_multiline_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/editTextUtilsTransparentDefault"
        android:gravity="top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:cursorVisible="true"
        android:textCursorDrawable="@drawable/text_cursor" />

    <TextView
        android:id="@+id/public_multiline_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="@dimen/editTextUtilsDistanceDefault_6"
        android:layout_gravity="end"
        android:textColor="@color/editTextUtilsHintColorDefault"
        android:layout_below="@id/public_multiline_et"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>